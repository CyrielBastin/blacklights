.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h5
            Veuillez remplir toutes les informations concernant l'utilisateur
        .ibox-content
          = form_for [:admin, @user], validate: true, html: {class: "form-horizontal"} do |f|
            .form-group
              %label.col-sm-2.control-label Email
              .col-sm-10
                = f.text_field :email, class: "form-control required", disabled: f.object.confirmed?
                = f.hidden_field :skip_password_validation, value: true
            .hr-line-dashed
            = f.fields_for :profile, f.object.profile.present? ? f.object.profile : Profile.new do |profile|
              .form-group
                %label.col-lg-2.control-label Nom
                .col-lg-10
                  = profile.text_field :lastname, class: "form-control required"
              .hr-line-dashed
              .form-group
                %label.col-lg-2.control-label PrÃ©nom
                .col-lg-10
                  = profile.text_field :firstname, class: "form-control required"
              .hr-line-dashed
              .form-group
                %label.col-sm-2.control-label Date de naissance
                .col-sm-10
                  = profile.date_select :birthdate, start_year: 1900, end_year: Date.today.year, class: "form-control"
              .hr-line-dashed
              .form-group
                %label.col-sm-2.control-label Sexe
                .col-sm-10
                  = profile.select :gender, Profile.gender.options, {include_blank: true}, {class: "form-control required"}
              .hr-line-dashed
              .form-group
                %label.col-sm-2.control-label Rue et numÃ©ro
                .col-sm-10
                  = profile.text_field :street, class: "form-control"
              .hr-line-dashed
              .form-group
                %label.col-sm-2.control-label Code postal
                .col-sm-10
                  = profile.number_field :zipcode, class: "form-control"
              .hr-line-dashed
              .form-group
                %label.col-sm-2.control-label Ville
                .col-sm-10
                  = profile.text_field :city, class: "form-control"
              .hr-line-dashed
              .form-group
                %label.col-sm-2.control-label Pays
                .col-sm-10
                  = profile.country_select :country,  {selected: "BE"},{class: "form-control"}

            .hr-line-dashed
            .form-group
              .col-sm-4.col-sm-offset-2
                %button.btn.btn-primary{:type => "submit"} Sauver
