.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h5
            Veuillez remplir toutes les informations concernant votre activité
        .ibox-content
          = form_for [:admin,@category], validate: true, html: {class: "form-horizontal"} do |f|
            .form-group
              %label.col-sm-2.control-label Nom
              .col-sm-10
                = f.text_field :name, class: "form-control"
            .hr-line-dashed
            .form-group
              %label.col-sm-2.control-label Catégorie parente
              .col-sm-10
                = f.select :parent_id, options_for_select(Category.all.map{|s|[s.name, s.id]}, @category.parent_id),{:include_blank => 'Aucune'}, {:class => "form-control select"}
            .form-group
              %label.col-sm-2.control-label Catégorie pour
              .col-sm-10
                = f.select :category_for, Category.category_for.options, {}, class: 'form-control required'
            .form-group
              .col-sm-4
                %button.btn.btn-primary{:type => "submit"} Sauver la catégorie
