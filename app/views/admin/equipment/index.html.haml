.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2 Matériel
    %ol.breadcrumb
      %li
        %a{:href => admin_root_path} Accueil
      %li.active
        %strong Matériel

.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h5 L'ensemble du matériel défini
          .ibox-tools
            = link_to 'Nouveau matériel', new_admin_equipment_path, class: 'btn btn-primary'
            = link_to 'Exporter', admin_equipment_index_path(format: :xlsx), class: 'btn btn-info btn-export-model' if @equipments.size > 0
            %br
          = form_tag admin_import_equipment_path, method: :post, multipart: true do
            %fieldset
              %legend Importer des données
              = file_field_tag :file
              = submit_tag "Importer", class: "btn btn-success mt-20"
        .ibox-content
          - if @equipments.size > 0
            .project-list
              %table.table.table-hover.table-striped.dataTables
                %thead
                  %th{width: '15%'} Nom
                  %th{style: "max-width: 20%"} Description
                  %th{width: '10%'} Catégorie
                  %th{width: '25%'} Détails
                  %th{width: '10%'} prix/unité
                  %th{width: '20%'} Actions
                %tbody
                  - @equipments.each do |equipment|
                    %tr
                      %td.project-title{:style => 'word-wrap: break-word'}
                        %b
                          = equipment[:name]

                      %td{:style => 'word-wrap: break-word'}
                        = equipment[:description].truncate(200)

                      %td
                        = equipment.category.name

                      %td
                        = "Fournisseur : #{equipment.supplier[:name]}"
                        %br
                        = "Largeur : #{to_french_repr(equipment.dimension[:width])} cm"
                        %br
                        = "Longueur : #{to_french_repr(equipment.dimension[:length])} cm"
                        %br
                        = "Hauteur : #{to_french_repr(equipment.dimension[:height])} cm"
                        %br
                        = "Poids : #{to_french_repr(equipment.dimension[:weight])} g"

                      %td
                        = "#{to_french_repr(equipment[:unit_price])} €"

                      %td.project-actions
                        .btn-group
                          %button.btn.btn-success.dropdown-toggle{"data-toggle" => "dropdown"}
                            Actions
                            %span.caret
                          %ul.dropdown-menu
                            %li
                              %a.btn.btn-white.btn-sm{:href => edit_admin_equipment_path(equipment[:id])}
                                %i.fa.fa-pen
                                Modifier
                              = link_to admin_equipment_path(equipment[:id]), method: :delete, data: { confirm: "Êtes-vous sur de vouloir supprimer ce matériel ?" }, class: "btn btn-white btn-sm" do
                                %i.fa.fa-trash
                                Supprimer

            .pagination-custom
              = paginate @equipments, views_prefix: 'admin'

          - else
            Aucun matériel enregisté actuellement.
