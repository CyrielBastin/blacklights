/ Contact us
%section.section.section-xl.bg-default
  .container
    .row.row-30.row-md-50
      .col-lg-4.col-xl-5
        .inset-xl-right-70
          %h3 Have Any Questions?
          %h5.title-6 Feel free to contact us using the form on the right.
          %ul.list-contacts
            %li
              %span.icon.mdi.mdi-phone
              %a.big{:href => "tel:#"} +1 800 123 1234
            %li
              %span.icon.mdi.mdi-map-marker
              %a.big{:href => "#"} 652 Main Road, Apt 12 New York, USA
            %li
              %span.icon.mdi.mdi-email-outline
              %a.big{:href => "mailto:#"} info@demolink.org
          %ul.list-social.list-inline.list-inline-md
            %li
              %a.icon.mdi.mdi-facebook{:href => "#"}
            %li
              %a.icon.mdi.mdi-google{:href => "#"}
            %li
              %a.icon.mdi.mdi-twitter{:href => "#"}
            %li
              %a.icon.mdi.mdi-pinterest{:href => "#"}
      .col-lg-8.col-xl-7
        / RD Mailform
        %form.rd-form{:action => "bat/rd-mailform.php", "data-form-output" => "form-output-global", "data-form-type" => "contact", :method => "post"}
          .row.row-20.gutter-20
            .col-sm-6
              .form-wrap
                %input#contact-name.form-input{"data-constraints" => "@Required", :name => "name", :type => "text"}/
                %label.form-label{:for => "contact-name"} Your Name
            .col-sm-6
              .form-wrap
                %input#contact-surname.form-input{"data-constraints" => "@Required", :name => "name", :type => "text"}/
                %label.form-label{:for => "contact-surname"} Your Surname
            .col-sm-6
              .form-wrap
                %input#contact-phone.form-input{"data-constraints" => "@Numeric", :name => "phone", :type => "text"}/
                %label.form-label{:for => "contact-phone"} Phone
            .col-sm-6
              .form-wrap
                %input#contact-email.form-input{"data-constraints" => "@Email @Required", :name => "email", :type => "email"}/
                %label.form-label{:for => "contact-email"} E-mail
            .col-12
              .form-wrap
                %label.form-label{:for => "contact-message"} Message
                %textarea#contact-message.form-input{"data-constraints" => "@Required", :name => "message"}
          .group-lg.group-custom-1
            .group-custom-ie
              .unit.unit-spacing-md.form-text
                .unit-left
                  %span.icon.mdi.mdi-information-outline
                .unit-body
                  %p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis
            %div
              %button.button.button-gray-5{:type => "submit"} Send Message
