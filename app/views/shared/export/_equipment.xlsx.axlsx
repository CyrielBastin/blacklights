wb.add_worksheet(name: 'Matériel') do |sheet|
  sheet.add_row ['Nom', 'Description', 'Prix (€)',
                 'Catégorie',
                 'Fournisseur',
                 'Largeur (cm)', 'Longueur (cm)', 'Hauteur (cm)', 'Poids (g)'], style: center
  Equipment.all.each do |equipment|
    sheet.add_row [equipment[:name], equipment[:description], equipment[:unit_price],
                   equipment.category[:name],
                   equipment.supplier[:name],
                   equipment.dimension[:width], equipment.dimension[:length], equipment.dimension[:height], equipment.dimension[:weight]], style: center
  end
end
