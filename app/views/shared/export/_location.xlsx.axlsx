locations = Location.all
activities = assemble_pieces_together(locations,
                                      obj_to_assemble: :location_activities,
                                      obj_name: :activity,
                                      name: :name)

wb.add_worksheet(name: 'Lieux') do |sheet|
  sheet.add_row ['Nom', 'Type', 'Capacité', 'Rue et numéro', 'Code postal', 'Ville', 'Pays',
                 'Activités disponibles',
                 'Largeur (m)', 'Longueur (m)', 'Hauteur (m)',
                 'Nom de famille', 'Prénom', 'Téléphone', 'Email',
                 'c. Rue et numéro', 'c. Code postal', 'c. Ville', 'c. Pays', 'id'], style: center
  locations.each_with_index do |location, i|
    sheet.add_row [location[:name], location[:type], location[:capacity], location[:street], location[:zip_code], location[:city], location[:country],
                   activities[i],
                   location.dimension[:width], location.dimension[:length], location.dimension[:height],
                   location.contact[:lastname], location.contact[:firstname], location.contact[:phone_number], location.contact[:email],
                   location.contact.coordinate[:street], location.contact.coordinate[:zip_code], location.contact.coordinate[:city], location.contact.coordinate[:country], location[:id]], style: center
  end
  sheet.rows.each do |row|
    row.cells[19].style = cell_id_style
  end
end
